<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="<%= process.env.URL %>/css/index.css">
    <link rel="shortcut icon" href="https://playdragonfly.net/assets/Dragon.svg" type="image/x-icon">
    <!-- <link rel="stylesheet" href="http://localhost:1550/stylesheets/index.css"> -->
    <script src="https://js.stripe.com/v3/"></script>
    <link rel="stylesheet" href="https://cdn.icnet.dev/web/drgn/css/header-style.css">
    <link rel="stylesheet" href="//cdn.icnet.dev/web/drgn/components/css/footer.css">
    <title>Dragonfly Store</title>
    <style>
        .shop-item-image {
            height: 230px;
        }
    </style>
</head>

<body>
    <!-- The Modal -->
    <div id="modal-video" class="modal-video">
        <div class="modal-content-video">
            <span class="close close-video">&times;</span>
            <video id="modal-video-preview" autoplay loop>

            </video>
            <div id="caption-video"></div>
        </div>
    </div>


    <div class="page-wrapper">
        <%- include('partials/header') %>

        <div class="card-wrapper">
            <% shopItems.forEach(item => { %>
            <%- include('partials/item', {item: item}); %>
            <% }); %>
        </div>
        <div id="footer"></div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
    <script>
        $('#footer').load('https://cdn.icnet.dev/web/drgn/components/footer.html');
    </script>
    <!-- Fontawesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <script src="/js/index.js"></script>
    <script src="https://ideas.playdragonfly.net/js/main.js"></script>
    <script src="https://cdn.icnet.dev/web/drgn/js/common.js"></script>
    <style>
        .shop-item-image:hover {
            background-repeat: no-repeat;
            background-color: #778899;
            background-size: 100%
        }

        .shop-item-image {
            width: 100%;
            height: 230px;
            object-fit: cover;
            background-color: #778899;
            background-position: center;
            background-size: cover;
            transition: .15s cubic-bezier(.445, .05, .55, .95)
        }
    </style>
</body>

</html>